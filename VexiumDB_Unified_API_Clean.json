                            },
                            {
                                "name": "Access-Control-Allow-Headers",
                                "value": "Content-Type"
                            }
                        ]
                    }
                }
            },
            "id": "webhook-trigger",
            "name": "Webhook Gateway",
            "type": "n8n-nodes-base.webhook",
            "typeVersion": 2,
            "position": [
                0,
                0
            ],
            "webhookId": "vexium-api"
        },
        {
            "parameters": {
                "dataType": "string",
                "value1": "={{ $json.query.action || $json.body.action }}",
                "rules": {
                    "rules": [
                        {
                            "value2": "stats"
                        },
                        {
                            "value2": "tables"
                        },
                        {
                            "value2": "columns"
                        },
                        {
                            "value2": "data"
                        },
                        {
                            "value2": "schema"
                        },
                        {
